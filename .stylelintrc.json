{
  "extends": ["stylelint-config-recommended-scss"],
  "rules": {
    "selector-class-pattern": "^.[a-z]([a-z0-9-]+)?(__([a-z0-9]+-?)+)?(--([a-z0-9]+-?)+){0,2}$",
    "selector-id-pattern": "^$",
    "unit-allowed-list": ["vw", "vh", "em", "%", "fr", "px", "rem"],
    "media-feature-name-value-allowed-list": {
      "orientation": "portrait"
    }
  }
}
